<div class="p-5">
    <div class="p-1 RCardP">
<MudAlert Severity="Severity.Normal" Variant="Variant.Filled">
    @localization[languageIndex]["ReactorType"]
    <MudIcon Icon="@Icons.Material.Filled.ArrowForward" Size="Size.Small" />
    <MudChip T="string" Icon="@Icons.Custom.Uncategorized.Radioactive" Label="true" Color="Color.Primary" style="background:#fff; color:#000000;" OnClose="CloseChip">@localization[languageIndex]["NewTweets"]</MudChip>
</MudAlert>


    
    <MudText class="custom-container ">
            @foreach (var data in dataList)
            {
                <MudTextField T="string" class="Clearable" ReadOnly Text="@data.name" Label="@localization[languageIndex]["ClearableOutlined"]" Variant="Variant.Outlined" />
            }
        </MudText>
        <div class="custom-container">
            @foreach (var i in Enumerable.Range(1, 5))
            {
                <MudChip T="string" OnClick="OnChipClicked" Icon="@Icons.Material.Filled.AddCircle" Color="Color.Default">@localization[languageIndex]["Clicked"]</MudChip>
            }
            <div class="d-flex">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" />
            </div>
        </div>
    </div>
        <MudSimpleTable Elevation="0"  Hover="true" Dense="true"  FixedHeader="@fixedheader" Style="@(fixedheader ? "height:300px;" : "")">
            <thead>
                <tr>
                    
                    <th>@localization[languageIndex]["ID"]</th>
                    <th>@localization[languageIndex]["Name"]</th>
                    <th>@localization[languageIndex]["Description"]</th>
                    <th>@localization[languageIndex]["RAM"]</th>
                    <th>@localization[languageIndex]["CPU Cores"]</th>
                    <th>@localization[languageIndex]["Disk Space"]</th>
                    <th>@localization[languageIndex]["GPU"]</th>
                    <th>@localization[languageIndex]["Global"]</th>
                    <th>@localization[languageIndex]["Bandwidth"]</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var row in dataList)
                {
                    <tr>
                        <td>@row.id</td>
                        <td>@row.name</td>
                        <td>@row.description</td>
                        <td>@row.ram</td>
                        <td>@row.cpuCores</td>
                        <td>@row.diskSpace</td>
                        <td>@(row.isGpu ? "Yes" : "No")</td>
                        <td>@(row.isGlobal ? "Yes" : "No")</td>
                        <td>@row.bandwidth</td>
                    </tr>
                }
           
            </tbody>
        </MudSimpleTable>
