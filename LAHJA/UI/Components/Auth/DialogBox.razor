


    <MudDialog class="d-flex align-center justify-content-center flex-column" style="width:40% !important">
        <DialogContent>
            <MudText Typo="Typo.h6">@Title</MudText>
            <MudText Typo="Typo.body1">@Message</MudText>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="onConfirm" Color="Color.Primary">OK</MudButton>
            <MudButton OnClick="onCancel" Color="Color.Secondary">Cancel</MudButton>
        </DialogActions>
    </MudDialog>


@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Message { get; set; }

    private void onCancel()
    {
        MudDialog.Close(DialogResult.Cancel());
       
    }

    
    private void onConfirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
