<MudChip Color="@color" T="object" Size="Size.Small">@State</MudChip>


@code{
    [Parameter] public  object  State{ set; get; }
    private Color color=Color.Default;

    protected override void OnInitialized()
    {
        var s = State.ToString();
        if(s=="نشط" || s == "Active"||s=="True")
        {
            color = Color.Success;
        }
        else
        {
            color = Color.Error;

        }
        StateHasChanged();

    }
}