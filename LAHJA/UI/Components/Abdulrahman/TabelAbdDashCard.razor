<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Tab One ">
        <MudList Severity="Severity.Normal" Variant="Variant.Filled" T="string" Dense="true" Class="d-flex flex-grow-1 py-0  " Style="font-size:10px!important ;box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1) !important;overflow: hidden !important;height: 6%;padding: 2%;">




            <MudLink Href="#" Style="color:black!important ;padding:1%">  @(TypeLanguage ? "Home" : "الرئيسية") </MudLink>

            <MudSpacer />


            <MudButton Style="width:12% !important; height:50%;margin-top: 2%;"
                       Target="_blank"
                       Variant="Variant.Outlined"
                       Color="Color.Tertiary">
                @(TypeLanguage ? "Workout" : "تجريب")
            </MudButton>


        </MudList>

        <MudAlert Severity="Severity.Normal" Variant="Variant.Filled">
            @localization[language]["ReactorType"]
